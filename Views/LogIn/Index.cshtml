@model LogIn
@{
    ViewData["Title"] = "Login";
}
@{
    ViewData["Title"] = "Home Page";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title text-center">Acceso</h3>
            <form asp-controller="Login" asp-action="Access" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="row mt-4">
                    <div class="col-sm-6">
                        <div class="mb-3">
                            <label asp-for="Email" class="col-mb-2"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="col-mb-2"></label>
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <div class="custom-check">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe"  />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 offset-2">
                        <h3>Aqui acceso a applicación</h3>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-success w-100 btn-lg">Acceder <i class="bi bi-arrow-right-circle-fill"></i></button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
    
</div>
<!-- /.content-wrapper -->
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
